# =============================================================================
# AI Video Series Producer - API Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# =============================================================================

# -----------------------------------------------------------------------------
# Primary Video Generation APIs
# -----------------------------------------------------------------------------

# Google Veo (via Gemini API)
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
VEO_MODEL=veo-3.1-generate-preview

# Kling AI (via PiAPI, fal.ai, or Kie.ai)
# PiAPI: https://piapi.ai/
# fal.ai: https://fal.ai/
# Kie.ai: https://kie.ai/
KLING_API_KEY=your_kling_api_key_here
KLING_PROVIDER=fal  # Options: fal, piapi, kie

# Runway Gen-4
# Get your key at: https://runwayml.com/api
RUNWAY_API_KEY=your_runway_api_key_here

# MiniMax Hailuo
# Get your key at: https://platform.minimax.io/
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_group_id_here

# Luma AI (Dream Machine / Ray)
# Get your key at: https://lumalabs.ai/dream-machine/api
LUMA_API_KEY=your_luma_api_key_here

# OpenAI Sora (if you have access)
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# Unified API Aggregators (Alternative to direct APIs)
# -----------------------------------------------------------------------------

# fal.ai - Recommended unified API
# Get your key at: https://fal.ai/
FAL_API_KEY=your_fal_api_key_here

# AIMLAPI - 400+ models
# Get your key at: https://aimlapi.com/
AIMLAPI_KEY=your_aimlapi_key_here

# Replicate - Open source models + LoRA training
# Get your key at: https://replicate.com/
REPLICATE_API_TOKEN=your_replicate_token_here

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------

# Local storage (default)
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./output

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1

# Google Cloud Storage (optional)
GCS_BUCKET=your_gcs_bucket
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# -----------------------------------------------------------------------------
# Notification Configuration (optional)
# -----------------------------------------------------------------------------

# Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# -----------------------------------------------------------------------------
# n8n Integration
# -----------------------------------------------------------------------------

# n8n webhook URL (for triggering workflows)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/video-series

# n8n API (for programmatic workflow management)
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your_n8n_api_key

# -----------------------------------------------------------------------------
# Quality & Review (optional)
# -----------------------------------------------------------------------------

# Claude API for quality review
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI for prompt refinement
# (Uses OPENAI_API_KEY above)

# -----------------------------------------------------------------------------
# Default Settings
# -----------------------------------------------------------------------------

# Default video generation provider
DEFAULT_PROVIDER=fal
DEFAULT_MODEL=kling-2.5

# Default video settings
DEFAULT_DURATION=5
DEFAULT_RESOLUTION=720p
DEFAULT_ASPECT_RATIO=16:9

# Context management
CONTEXT_DB_PATH=./context/generations/history.db
MAX_REFERENCE_IMAGES=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/video_producer.log
